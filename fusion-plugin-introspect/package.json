{
  "name": "fusion-plugin-introspect",
  "description": "Visualize the tree of plugins in your app",
  "version": "0.0.0-monorepo",
  "license": "MIT",
  "repository": {
    "directory": "fusion-plugin-introspect",
    "type": "git",
    "url": "https://github.com/fusionjs/fusionjs"
  },
  "main": "./dist/index.js",
  "module": "./dist/index.es.js",
  "browser": {
    "./dist/index.js": "./dist/browser.es5.js",
    "./dist/index.es.js": "./dist/browser.es5.es.js"
  },
  "es2015": {
    "./dist/browser.es5.es.js": "./dist/browser.es2015.es.js"
  },
  "es2017": {
    "./dist/browser.es5.es.js": "./dist/browser.es2017.es.js",
    "./dist/browser.es2015.es.js": "./dist/browser.es2017.es.js"
  },
  "bin": {
    "fusion-run-introspect": "src/cli/index.js"
  },
  "files": [
    "dist",
    "src"
  ],
  "dependencies": {
    "koa-bodyparser": "^4.2.1",
    "sade": "^1.4.1"
  },
  "devDependencies": {
    "@babel/core": "^7.4.4",
    "@babel/plugin-transform-modules-commonjs": "^7.2.0",
    "@babel/preset-flow": "^7.0.0",
    "@babel/preset-react": "^7.0.0",
    "babel-core": "^7.0.0-bridge.0",
    "babel-eslint": "^10.0.1",
    "babel-jest": "^24.8.0",
    "create-universal-package": "^3.4.7",
    "enzyme": "^3.9.0",
    "enzyme-adapter-react-16": "^1.12.1",
    "eslint": "^5.16.0",
    "eslint-config-fusion": "0.0.0-monorepo",
    "eslint-plugin-cup": "^2.0.1",
    "eslint-plugin-flowtype": "^3.8.1",
    "eslint-plugin-import": "^2.17.2",
    "eslint-plugin-jest": "^22.5.1",
    "eslint-plugin-prettier": "^3.0.1",
    "eslint-plugin-react": "^7.13.0",
    "flow-bin": "^0.102.0",
    "fusion-core": "0.0.0-monorepo",
    "fusion-test-utils": "0.0.0-monorepo",
    "jest": "^24.8.0",
    "prettier": "^1.17.0"
  },
  "peerDependencies": {
    "fusion-core": "0.0.0-monorepo"
  },
  "scripts": {
    "clean": "rm -rf dist",
    "lint": "eslint .",
    "test": "jest",
    "cover": "jest --coverage",
    "view-cover": "npm run cover && open coverage/index.html",
    "prepublish": "npm run build",
    "build": "npm run clean && cup build",
    "flow": "flow check"
  },
  "jest": {
    "projects": [
      {
        "name": "node",
        "displayName": "node",
        "browser": false,
        "testEnvironment": "node",
        "testRegex": ".*\\.node\\.js$",
        "globals": {
          "__BROWSER__": false,
          "__NODE__": true,
          "__DEV__": false
        }
      },
      {
        "name": "browser",
        "displayName": "browser",
        "browser": true,
        "testEnvironment": "jsdom",
        "testRegex": ".*\\.browser\\.js$",
        "globals": {
          "__BROWSER__": true,
          "__NODE__": false,
          "__DEV__": false
        }
      }
    ]
  },
  "babel": {
    "env": {
      "test": {
        "presets": [
          "@babel/preset-flow"
        ],
        "plugins": [
          "@babel/plugin-transform-modules-commonjs"
        ]
      }
    }
  },
  "engines": {
    "node": ">=8.9.0 <11",
    "npm": ">=5.0.0",
    "yarn": ">=1.0.0"
  },
  "homepage": "https://fusionjs.com/api/fusion-plugin-introspect"
}
